{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "semi": false,
  "trailingComma": "none",
  "overrides": [
    {
      "files": [
        "**/*.sh",
        "**/*.txt",
        "**/.*ignore",
        "**/.*rc",
        "**/.env*",
        "**/.eslintcache",
        "**/.git*",
        ".editorconfig",
        ".husky/commit-msg",
        ".husky/pre-commit",
        ".husky/pre-push",
        "Brewfile"
      ],
      "options": {
        "functionNextLine": true,
        "keepComments": true,
        "keepPadding": false,
        "parser": "sh",
        "spaceRedirects": true,
        "switchCaseIndent": true,
        "variant": 0
      }
    }
  ]
}
